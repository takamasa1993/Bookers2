<main>
  <p id="notice"><%= flash[:notice] %></p>
  <div class='container px-5'>
    <div class='row'>
      <div class='col-md-3'>
        <%= render 'devise/shared/user_info',book: @book,user: @user %>
      </div>
      <div class='col-md-8 offset-md-1'>
        <h2>Users</h2>
        <table class='table table-hover table-inverse'>
          <thead>
            <tr>
              <th>image</th>
              <th>name</th>
              <th></th>
              <% @users.each do |user| %>
                <tr>
                  <td>
                    <% if user.profile_image.present? %>
                      <%= link_to image_tag(user.profile_image, width: "50px", height: "50px"), user_path(user) %>
                    <% else %>
                      <%= link_to image_tag('default-image.jpg', width: "70px", height: "70px"), user_path(user) %>
                    <% end %>
                  </td>
                  <td><%= user.name %></td>
                  <td><%= link_to "Show", user_path(user) %></td>
                  <td colspan="3"></td>
                </tr>
              <% end %>
            </tr>
          </thead>
          <tbody></tbody>
        </table>
      </div>
    </div>
  </div>
</main>