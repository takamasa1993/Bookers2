<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h1 class="text-left">Editing Book</h1>

      <%= form_for @book do |f| %>
        <div class="form-group">
          <%= f.label :title %>
          <%= f.text_field :title, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :opinion %>
          <%= f.text_area :body, class: "form-control" %>
        </div>

        <%= f.submit "Update Book", class: "btn btn-success mt-2" %>

        <div class="text-left mt-4">
          <%= link_to "Show", book_path(@book), class: "btn-link mr-2" %>
          <span class="vertical-line"></span>
          <%= link_to "Back", books_path, class: "btn-link ml-2" %>
        </div>
      <% end %>

    </div>
  </div>
</div>

