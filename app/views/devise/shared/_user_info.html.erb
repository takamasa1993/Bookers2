  <%= flash[:success] %>
  <h2>User info</h2>
  <table class='table'>
    <tr>
      <% if user.profile_image.present? %>
        <%= image_tag user.profile_image.variant(resize: '100x100') %>
      <% else %>
        <%= image_tag 'default-image.jpg' %>
      <% end %>
    </tr>
    <tr>
      <th>name</th>
      <th><%= user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= user.introduction %></th>
    </tr>
  </table>
  <div class='row'>
    <%= link_to edit_user_path(user), class: "btn btn-outline-secondary btn-block" do %>
      <%= content_tag(:i, "", class: "fa-solid fa-user-gear") %>
    <% end %>
  </div>
  <h2 class="mt-3">New book</h2>
  <%= form_with model: book do |form| %>
    <div class="field">
      <%= form.label :title %>
      <%= form.text_field :title %>
    </div>
    <div class="field">
      <%= form.label :body %>
      <%= form.text_area :body %>
    </div>
    <div class="actions">
      <%= form.submit "Create Book", class: "btn btn-success" %>
    </div>
  <% end %>